<script type="text/javascript">
function priceCoffee() {
var check;
var k = document.getElementById('kolvo').value;
var p = 55;
var cs = 20;
if (document.getElementById('check2').checked) {
alert ("Цена: "+k*(p+cs));
} else {
alert ("Цена: "+k*p);
}
}
